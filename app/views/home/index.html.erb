<h1>Hello World!</h1>



<% if user_signed_in? %>
  <%= render 'new_post', post: @post %>
<%end %>

<div class="container">
  <% @posts.each do |post| %>
    <div class="card my-2" style="width: 18rem; ">
      <div class="card-body">
        <h6 class="card-text"><%=post.body %></h6>
        <p class="card-text text-end"><small class="text-muted"><%= post.creator.username %></small></p>
      </div>
    </div>
<% end %>
</div>
